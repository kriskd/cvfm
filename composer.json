{
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "Datasources",
                "type": "cakephp-plugin",
                "version": "dev-master",
                "source": {
                    "url": "https://github.com/cakephp/datasources",
                    "type": "git",
                    "reference": "origin/master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "HtmlPurifier",
                "type": "cakephp-plugin",
                "version": "dev-master",
                "source": {
                    "url": "https://github.com/kriskd/HtmlPurifier",
                    "type": "git",
                    "reference": "origin/master"
                }
            }
        }
    ],
    "require": {
        "cakephp/cakephp": "2.*",
        "composer/installers": "dev-master",
        "mjohnson/uploader": "4.*",
        "Datasources": "dev-master",
        "HtmlPurifier": "dev-master"
    },
    "require-dev": {
        "cakephp/debug_kit": "2.2.*",
        "phpunit/phpunit": "4.* || 5.*"
    },
    "config": {
        "vendor-dir": "Vendor"
    }
}
