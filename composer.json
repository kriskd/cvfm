{
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "Stripe",
                "type": "cakephp-plugin",
                "version": "2.0.0",
                "source": {
                    "url": "https://github.com/chronon/CakePHP-StripeComponent-Plugin",
                    "type": "git",
                    "reference": "origin/master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "stripe/stripe-php",
                "version": "1.9.0",
                "source": {
                    "url": "https://github.com/stripe/stripe-php",
                    "type": "git",
                    "reference": "origin/master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "HtmlPurifier",
                "type": "cakephp-plugin",
                "version": "dev-master",
                "source": {
                    "url": "https://github.com/kriskd/HtmlPurifier",
                    "type": "git",
                    "reference": "origin/master"
                }
            }
        }
    ],
    "require": {
        "composer/installers": "dev-master",
        "mjohnson/uploader": "4.*",
        "cakephp/debug_kit": "2.2.*",
        "Stripe": "2.0.0",
        "stripe/stripe-php": "1.9.0",
        "twitter/bootstrap": "3.0.*",
        "HtmlPurifier": "dev-master"
    },
    "config": {
        "vendor-dir": "Vendor"
    },
    "extra": {
        "installer-paths": {
            "Plugin/Stripe/Vendor/Stripe": ["stripe/stripe-php"]
        }
    }
}